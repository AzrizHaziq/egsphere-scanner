{
  "name": "egsphere-scanner",
  "version": "1.0.0",
  "description": "lerna",
  "private": true,
  "scripts": {
    "dev": "run-p --print-label 'dev:**' 'proxy'",
    "start": "run-p --print-label 'start:**' 'proxy'",
    "proxy": "micro-proxy -r rules-dev.json",
    "dev:web": "lerna run dev --scope web",
    "dev:api": "lerna run dev --scope api",
    "start:web": "lerna run start --scope web",
    "start:api": "lerna run start --scope api"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "lerna": "^3.10.6"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "micro-proxy": "^1.1.0",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "yarn": "^1.7.0"
  }
}
